<div>
  <ptitle>
    <h2>Inheritance Graph</h2>
  </ptitle>
  <div
    id="inheritance-graph"
    style="width: 100%; height: 400px;"
  ></div>
  <script
    type="text/javascript"
    src="https://unpkg.com/vis-network/standalone/umd/vis-network.min.js"
  ></script>
  <script>
    document.addEventListener('DOMContentLoaded', (event) => {
      const container = document.getElementById('inheritance-graph');
      const nodes = new vis.DataSet(<%- JSON.stringify(dependencies.nodes.map((a, i) => {
        return {
          id: a.id,
          label: a.id,
          shape: 'box',
          size: 20,
          font: {
            size: 14,
            face: 'Arial',
            color: 'white'
          },
          color: {
            border: '#000000',
            background: '#000000',
            highlight: {
              border: '#00000',
              background: '#D2E5FF'
            },
            hover: {
              border: '#00000',
              background: '#D2E5FF'
            }
          },
          margin: 10 // Add some margin around the text
        }
      })) %>);
      const edges = new vis.DataSet(<%- JSON.stringify(dependencies.links.map((a, i) => {
        return {
          from: a.source,
          to: a.target,
          arrows: 'to',
          color: 'white'
        }
      })) %>);
      const data = {
        nodes: nodes,
        edges: edges
      };
      const options = {
        layout: {
          hierarchical: {
            direction: 'UD',
            sortMethod: 'directed',
            nodeSpacing: 90,
            treeSpacing: 180
          }
        },
        nodes: {
          borderWidth: 2,
          scaling: {
            label: {
              enabled: true
            }
          }
        },
        edges: {
          color: 'lightgray',
          smooth: false
        },
        physics: false
      };
      const network = new vis.Network(container, data, options);
    });
  </script>
</div>
