<style>
    .centralization-table {
      display: flex;
      border-radius: 20px 0 20px 0;
      overflow: hidden;
      width: fit-content;
      margin-top: 0px;
    }
  
    .functions-table {
      width: 100%;
      border-collapse: collapse;
    }
  
    .functions-table tr:nth-child(1) {
      background-color: red;
      border-top-left-radius: 20px;
    }
  
    .functions-table tr:first-child th:first-child {
      border-top-left-radius: 20px;
      border: none;
      margin: 0;
      padding: 0;
      height: 62px;
      background-color: #2f4076;
      border-right: 1px solid #647fd4;
      border-bottom: 1px solid #647fd4;
    }
  
    .functions-table tr:first-child th:last-child {
      border-top-right-radius: 20px;
      border: none;
      margin: 0;
      padding: 0;
      background-color: #2f4076;
    }
  
    .functions-table th,
    .functions-table td {
      padding: 8px;
    }
  
    .functions-table tr>td:nth-child(1) {
      color: white;
      background-color: #2f4076;
      border-right: 1px solid #647fd4;
      border-bottom: 1px solid #647fd4;
      font-size: 16px;
      font-style: normal;
      font-weight: 600;
      border-left: 0px;
      text-align: center;
      padding: 14px;
    }
  
    .functions-table tr>td:nth-child(2) {
      background: white;
      color: black;
      text-align: center;
      border-bottom: 1px solid black;
    }
  
    .functions-table tr:last-child>td:nth-child(1) {
      border-bottom-left-radius: 20px;
      border-bottom: none;
    }
  
    .functions-table tr:last-child>td:nth-child(2) {
      border-bottom-right-radius: 20px;
    }
  
    .functions-table .contract-name {
      width: 30%;
    }
  
    .functions-table .contract-functions {
      width: 70%;
    }
  </style>
