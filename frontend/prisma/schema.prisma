// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  whitelisted Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
model user_meta {
  id              Int      @id @default(autoincrement())  
  user_id         Int       @unique    
  user_name       String?   @unique  
  bio             String?   
  social_twitter  String?   @unique
  social_telegram String?   @unique
  project_name    String?
  project_logo    String?
  project_email   String?
  project_website String?
  project_twitter String?
  project_telegram String?
  project_insta String?
}

model audit_requests {
  request_id  Int      @id @default(autoincrement())
  contract    String   @unique
  status      String   @db.VarChar(50)
  status_log  String?
  created_on  DateTime @default(now())
  updated_on  DateTime @default(now())

  @@map(name: "audit_requests")
}

model report_requests {
  id          Int      @id @default(autoincrement())
  user_id     Int
  address     String
  status      String?
  link        String?
  created_at  DateTime @default(now())
  updated_on  DateTime @default(now())

  @@map(name: "report_requests")
}

model subscriptions {
  id          Int      @id @default(autoincrement())
  user_id     Int
  paid_token  String
  created_at  DateTime @default(now())

  @@map(name: "subscriptions")
}
